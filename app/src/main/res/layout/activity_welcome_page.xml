<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_color">

        <ImageView
            android:id="@+id/some_id"
            android:layout_width="377dp"
            android:layout_height="377dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/objwelcome1"
            android:layout_gravity="center_horizontal">
        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rectangle_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/objwelcome2">
            </ImageView>

            <TextView
                android:id="@+id/discover_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:lineSpacingExtra="-25sp"
                android:text="Discover a"
                android:textSize="30dp"
                android:layout_marginVertical="40dp"
                android:layout_marginLeft="20dp"></TextView>

            <TextView
                android:id="@+id/healthier_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/poppins_bold"
                android:lineSpacingExtra="-25sp"
                android:text="healthier you!"
                android:textSize="30dp"
                android:layout_marginVertical="75dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join us in tracking your calorie intake"
                android:textSize="16sp"
                android:layout_marginVertical="130dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="297dp"
                android:layout_height="112dp"
                android:text="effortlessly with our user-friendly calorie counting app. Start today and take control of your fitness journey"
                android:textSize="16sp"
                android:layout_marginVertical="150dp"
                android:layout_marginLeft="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/objwelcome3"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="260dp"
                android:layout_marginLeft="220dp"
                android:textColor="@color/black"
                android:text="Get Started"
                android:fontFamily="@font/poppins_bold"
                android:id="@+id/btn_get_started"/>


        </RelativeLayout>


        </LinearLayout>



    </LinearLayout>
